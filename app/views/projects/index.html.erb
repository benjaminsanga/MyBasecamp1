<div class="row mx-3">
  <p style="color: green"><%= notice %></p>

  <h3>Projects</h3>

  <div class="col-md-6" id="projects">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>View</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= button_to 'Show this project', project, method: :get, class: 'btn btn-sm btn-success' %></td>
          <td><%= button_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }, class: 'btn btn-small btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6"></div>

  <%= link_to "New project", new_project_path, class: 'text-decoration-none' %>
</div>
