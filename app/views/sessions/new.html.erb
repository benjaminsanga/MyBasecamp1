<div class="row mx-3">
  <h4>Would you like to Login?</h4>

  <div class="col-md-4">
    <%= form_with(model: @session, local: true) do |f| %>
      <%= f.label :username %><br>
      <%= f.text_field :username, autofocus: true, class: 'form-control' %><br>
    
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>
    
      <%= f.submit "Login", class: 'btn btn-success btn-small' %>
    <% end %>
  </div>
  <div class="col-md-8"></div>
</div>
