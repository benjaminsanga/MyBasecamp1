<div class="row mx-3">
  <h4>Login</h4>

  <div class="col-md-6">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit "Login", class: 'btn btn-success btn-small' %>
    <% end %>
  </div>
</div>
